<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="cardViewStyle">@style/CardView</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:indeterminateTint">@color/blue_900</item>
    </style>

    <!-- Toolbar theme -->
    <style name="ToolbarTextTheme" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ListView theme -->
    <style name="ListViewTheme" parent="Base.Widget.AppCompat.ListView">
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">@dimen/activity_margins</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:orientation">vertical</item>
        <item name="android:scrollbarSize">@dimen/scrollbar_size</item>
        <item name="android:scrollbarThumbVertical">@color/colorCardBackground</item>
        <item name="android:listSelector">@android:color/transparent</item>

    </style>

    <!-- CardView theme -->
    <style name="CardTheme" parent="CardView">
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
    </style>

    <!-- CardView Title theme -->
    <style name="CardTitleTheme" parent="Base.TextAppearance.AppCompat">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorCardTitle</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- CardView Date theme -->
    <style name="CardDateTheme" parent="Base.TextAppearance.AppCompat">
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/colorCardDate</item>
        <item name="android:textSize">@dimen/card_date_text_size</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- CardView Description theme -->
    <style name="CardDescTheme" parent="Base.TextAppearance.AppCompat">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorCardDesc</item>
        <item name="android:textSize">@dimen/card_desc_text_size</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- CardView Button theme -->
    <style name="CardButtonTheme" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorCardButtonText</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <!-- Empty/Failed state text theme -->
    <style name="EmptyStateTextTheme" parent="Base.TextAppearance.AppCompat">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/empty_state_text_size</item>
    </style>

</resources>
